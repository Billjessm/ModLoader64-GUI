{
	"name": "modloader64-gui",
	"productName": "modloader64 gui",
	"version": "0.0.0",
	"description": "My remarkable app",
	"license": "GPL",
	"repository": "hylianmodding/modloader64-gui",
	"author": {
		"name": "denoflions",
		"email": "denvstheworld@gmail.com",
		"url": "http://hylianmodding.com"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo",
		"test": "npm run lint",
		"start": "tsc && node ./fix_browser.js && electron ./app",
		"start_debug": "electron ./app",
		"pack": "tsc && electron-builder --dir && node ./modules.js",
		"dist": "tsc && electron-builder --windows",
		"release": "np"
	},
	"dependencies": {
		"electron-context-menu": "^0.12.1",
		"electron-debug": "^3.0.0",
		"electron-store": "^3.3.0",
		"electron-unhandled": "^2.2.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.12.0",
		"eventemitter2": "^5.0.1",
		"mkdir-recursive": "^0.4.0",
		"source-map-support": "^0.5.13"
	},
	"devDependencies": {
		"copy-node-modules": "^1.1.1",
		"electron": "^5.0.4",
		"electron-builder": "^20.43.0",
		"gts": "^1.1.0",
		"ncp": "^2.0.0",
		"np": "^5.0.3",
		"typescript": "^3.6.2",
		"xo": "^0.24.0"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		]
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.hylianmodding.modloader64-gui",
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"directories": {
			"app": "./app"
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
